<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GymTracker.Views.DetailsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:GymTracker.ViewModels"
    xmlns:model ="clr-namespace:GymTracker.Models"
    Title="{Binding CustomWorkout.Name}"
    x:DataType="viewmodel:CustomWorkoutDetailsViewModel">
    <ScrollView>
        <VerticalStackLayout BackgroundColor="#0C090D" >
            <CollectionView
                    ItemsSource="{Binding CustomWorkout.Exercises}">
                <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="model:SpecificExercise">
                        <Frame Padding="15"  HasShadow="True"  BackgroundColor="#0C090D" BorderColor="{StaticResource Accent}">
                            <Grid  BackgroundColor="#0C090D" RowDefinitions="Auto,Auto">
                                <HorizontalStackLayout Grid.Row="0" >
                                    <Label Style="{StaticResource MicroLabel}"
                                       TextColor="White" Text="{Binding Exercise.Muscle.MainMasculeGroup
                                    , StringFormat='Main Trained: {0}'}" />
                                </HorizontalStackLayout>
                                <Grid Grid.Row="1"  ColumnDefinitions="Auto,Auto,Auto,Auto,Auto,Auto">
                                    <VerticalStackLayout  Grid.Column="0">
                                        <Label TextColor="White" Style="{StaticResource LargeLabel}" Text="{Binding Exercise.Name}" />
                                    </VerticalStackLayout >
                                    <VerticalStackLayout  Grid.Column="1">
                                        <Label TextColor="{StaticResource Accent}" Style="{StaticResource LargeLabel}" Text=" &#x2794; " />
                                    </VerticalStackLayout >
                                    <VerticalStackLayout  Grid.Column="2">
                                        <Label TextColor="White" Style="{StaticResource LargeLabel}" Text="{Binding Weight, StringFormat='{0}kg '}" />
                                    </VerticalStackLayout>
                                    <VerticalStackLayout  Grid.Column="3">
                                        <Label TextColor="{StaticResource Accent}" Style="{StaticResource LargeLabel}" Text=" &#x2794; " />
                                    </VerticalStackLayout >
                                    <VerticalStackLayout  Grid.Column="4">
                                        <Label TextColor="White" Style="{StaticResource LargeLabel}" Text="{Binding Sets, StringFormat='{0}x'}" />
                                    </VerticalStackLayout>
                                    <VerticalStackLayout  Grid.Column="5">
                                        <Label TextColor="White" Style="{StaticResource LargeLabel}" Text="{Binding Repetitions}" />
                                    </VerticalStackLayout>
                                </Grid>
                        </Grid>
                        </Frame>
                    </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
    </ScrollView>
</ContentPage>
